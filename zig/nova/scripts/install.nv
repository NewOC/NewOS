if argc() < 1 {
    print("Usage: install <script.nv> [as_name]");
    exit();
}

set string src = args(0);
set string dest_name = src;

if argc() > 1 {
    set string dest_name = args(1) + ".nv";
}

print("Installing " + src + "...");

// Ensure system directories exist
create_dir("/SYSTEM");
create_dir("/SYSTEM/CMDS");

set string dest = "/SYSTEM/CMDS/" + dest_name;

copy(src, dest);
print("Successfully installed to " + dest);
print("You can now run it by typing: " + dest_name);
